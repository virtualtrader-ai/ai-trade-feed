
name: Generate Daily Trades

on:
  schedule:
    - cron: "0 13 * * *"  # Every day at 6am PST
  workflow_dispatch:

jobs:
  generate-trades:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Install OpenAI SDK
        run: pip install openai

      - name: Run trade generator
        env:
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
        run: |
          python generate_trades.py

      - name: Commit and push
        run: |
          git config user.name "auto-bot"
          git config user.email "bot@trading.ai"
          git add live_trades.json
          git commit -m "Update daily trade feed"
          git push
